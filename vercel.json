{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
  
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
  
    "rewrites": [
      { "handle": "filesystem" },          // ⬅️  fermati se il file esiste
      { "source": "/(.*)", "destination": "/index.html" }
    ]
  }
  
