{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "memory": 2048,
        "maxDuration": 30
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/(.*)",      "dest": "/index.html" }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "node_modules/chrome-aws-lambda/**"
    }
  }
}
